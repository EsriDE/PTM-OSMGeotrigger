			<app clientId="Ied6w56BNs5jSrQ0" clientSecret="b569f1d96b1d46f1a868a434b113b675"/>
		</arcgis>
		<matching>
			<fields>
				<field tag="name" name="name"/>
				<field tag="highway" name="highway"/>
				<field tag="fixme" name="fixme"/>
			</fields>
		</matching>
		<trigger>
