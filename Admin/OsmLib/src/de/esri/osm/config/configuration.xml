			<url>http://www.overpass-api.de/api/xapi?way[bbox=11.2,48.0,11.7,48.7][natural=water][area=yes]</url>
		</overpass>
		<arcgis>
			<type>polygon</type><!-- point, polyline, polygon -->
			<featureClass>http://services2.arcgis.com/tISIjAqoejGPFbAF/arcgis/rest/services/Natural_Water_Polygons/FeatureServer/0</featureClass>
			<login user="" password=""/>
			<app clientId="Ied6w56BNs5jSrQ0" clientSecret="b569f1d96b1d46f1a868a434b113b675"/>
		</arcgis>
		<matching>
			<fields>
				<field tag="name" name="name"/>
				<field tag="natural" name="natural"/>
			</fields>
		</matching>
		<trigger>
			<direction>enter</direction><!-- enter, leave -->
			<triggerID>{{OBJECTID}}</triggerID>
			<radius>1000</radius><!-- Meters -->
			<tags>Natural Water</tags>
			<notification>
				<text>Natural Water {{name}}</text>
				<url>http://www.openstreetmap.org/way/{{OSMID}}</url>
				<data>{{KeyValueAll}}</data>
			</notification>
		</trigger>
